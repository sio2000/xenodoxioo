# Database
DATABASE_URL="postgresql://user:password@localhost:5432/leonidionhouses"

# Server
NODE_ENV="development"
PORT=8080
API_URL="http://localhost:8080"
FRONTEND_URL="http://localhost:8080"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_EXPIRY="7d"
JWT_REFRESH_EXPIRY="30d"

# Stripe
STRIPE_SECRET_KEY="sk_test_xxxxx"
STRIPE_PUBLISHABLE_KEY="pk_test_xxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxx"

# SendGrid Email Service
SENDGRID_API_KEY="SG.xxxxx"
SENDGRID_FROM_EMAIL="noreply@leonidionhouses.com"
SENDGRID_FROM_NAME="LEONIDIONHOUSES"

# Email Settings
ADMIN_EMAIL="admin@leonidionhouses.com"
SUPPORT_EMAIL="support@leonidionhouses.com"

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Features
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PAYMENT_PROCESSING=true
REQUIRE_EMAIL_VERIFICATION=false

# Logging
LOG_LEVEL="info"
